<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mySpringServer.myPage.mapper.BoardMapper">
    <select id="boardList" parameterType="hashmap" resultType="com.mySpringServer.myPage.model.Board">
        SELECT *
        FROM TBL_BOARD
        WHERE TITLE LIKE '%' || #{keyword} || '%'
    </select>
    <delete id="deleteBoardItem" parameterType="hashmap">
        DELETE
        FROM TBL_BOARD
        WHERE BOARDNO = #{boardNo}
    </delete>
    <insert id="insertBoardItem" parameterType="hashmap">
        INSERT
        INTO TBL_BOARD(BOARDNO,TITLE,CONTENTS,USERID,HIT,CDATETIME,UDATETIME)
        VALUES (board_seq.nextval ,#{title} , #{contents} , #{userId} , 0 , SYSDATE,SYSDATE)
    </insert>
    <insert id="signUp" parameterType="hashmap">
        INSERT
        INTO TBL_USER (USERID,PASSWORD,USERNAME,EMAIL,PHONE,GENDER)
        VALUES ( #{userId} , #{password} , #{userName} , #{email} , #{phone} , #{gender}  )
    </insert>
    <select id="signIn" parameterType="hashmap" resultType="com.mySpringServer.myPage.model.User">
        SELECT *
        FROM TBL_USER
        WHERE USERID = #{userId} AND PASSWORD = #{password}
    </select>
    <select id="selectBoard" parameterType="hashmap" resultType="com.mySpringServer.myPage.model.Board">
        SELECT *
        FROM TBL_BOARD
        WHERE BOARDNO = #{boardNo}
    </select>
</mapper>