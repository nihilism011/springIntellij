<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mySpringServer.myPage.mapper.UserMapper">
    <insert id="signUp" parameterType="hashmap">
        INSERT
        INTO TBL_USER (USERID,PASSWORD,USERNAME,EMAIL,PHONE,GENDER)
        VALUES ( #{userId} , #{password} , #{userName} , #{email} , #{phone} , #{gender}  )
    </insert>
    <select id="signIn" parameterType="hashmap" resultType="com.mySpringServer.myPage.model.User">
        SELECT *
        FROM TBL_USER
        WHERE USERID = #{userId} AND PASSWORD = #{password}
    </select>
    <select id="userCheck" parameterType="hashmap" resultType="com.mySpringServer.myPage.model.Board">
        SELECT *
        FROM TBL_USER
        WHERE USERID = #{userId}
    </select>
</mapper>